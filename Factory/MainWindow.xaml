        <TextBox x:Name="Norma2TextBox" HorizontalAlignment="Left" Height="23" Margin="25,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Background="#FFA0BEFF" BorderBrush="Black"/>
