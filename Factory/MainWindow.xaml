        <Label Content="Производительность третьего завода за час:" HorizontalAlignment="Left" Margin="27,335,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Background="#FFBFDFF1"/>
        <TextBox x:Name="Detali3TextBox" HorizontalAlignment="Left" Height="23" Margin="27,371,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="380" Background="#FFA0BEFF" BorderBrush="Black"/>
        <Button Content="Рассчитать" HorizontalAlignment="Left" Margin="100,420,0,0" VerticalAlignment="Top" Width="235" Height="45" Background="#FFA4D4E6" FontSize="20" Click="Button_Click"/>
        <Label x:Name="resultTextBlock" Content="" HorizontalAlignment="Left" Margin="39,484,0,0" VerticalAlignment="Top" Background="#FFA0BEFF"/>

    </Grid>
</Window>
